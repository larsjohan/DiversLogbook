<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/iv_diverslist_diver_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="@string/profile_image_description"
        android:layout_margin="5dp" />


    <TextView
        android:id="@+id/tv_diverslist_diver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@id/iv_diverslist_diver_image"
        app:layout_constraintTop_toTopOf="@id/iv_diverslist_diver_image"
        app:layout_constraintBottom_toTopOf="@id/tv_diverslist_time_remaining"/>

    <TextView
        android:id="@+id/tv_diverslist_time_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_diverslist_diver_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_diverslist_diver_image"
        app:layout_constraintLeft_toRightOf="@id/iv_diverslist_diver_image"
        android:text="00:00"/>

    <ImageButton
        android:id="@+id/b_diverslist_start_stop_dive"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_diverslist_diver_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_diverslist_diver_image"/>



</android.support.constraint.ConstraintLayout>