<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_loglist_diveNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="0004"
        android:textSize="46sp"/>

    <TextView
        android:id="@+id/tv_loglist_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Date"
        app:layout_constraintLeft_toRightOf="@id/tv_loglist_diveNumber"
        app:layout_constraintTop_toTopOf="@id/tv_loglist_diveNumber"
        app:layout_constraintBottom_toTopOf="@id/tv_loglist_location"/>

    <TextView
        android:id="@+id/tv_loglist_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Location"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_loglist_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_loglist_diveNumber"
        app:layout_constraintLeft_toRightOf="@id/tv_loglist_diveNumber"/>



</android.support.constraint.ConstraintLayout>